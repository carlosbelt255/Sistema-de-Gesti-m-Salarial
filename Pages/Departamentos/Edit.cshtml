@page
@model SistemaDeGestionSalarial.Pages.Departamentos.EditModel

@{
    ViewData["Title"] = "Editar Departamento";
}

<h1 class="text-center my-4">Editar Departamento</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Departamento.DepartamentoID" />

            <div class="form-group mb-3">
                <label asp-for="Departamento.Nombre" class="form-label"></label>
                <input asp-for="Departamento.Nombre" class="form-control" />
                <span asp-validation-for="Departamento.Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Departamento.FechaCreacion" class="form-label"></label>
                <input asp-for="Departamento.FechaCreacion" class="form-control" />
                <span asp-validation-for="Departamento.FechaCreacion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Departamento.Estado" class="form-label"></label>
                <select asp-for="Departamento.Estado" class="form-select">
                    <option>Activo</option>
                    <option>Inactivo</option>
                </select>
                <span asp-validation-for="Departamento.Estado" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Departamento.CreadoPor" class="form-label"></label>
                <input asp-for="Departamento.CreadoPor" class="form-control" />
                <span asp-validation-for="Departamento.CreadoPor" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Departamento.ModificadoPor" class="form-label"></label>
                <input asp-for="Departamento.ModificadoPor" class="form-control" required />
                <span asp-validation-for="Departamento.ModificadoPor" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Departamento.FechaModificacion" class="form-label"></label>
                <input asp-for="Departamento.FechaModificacion" class="form-control" required />
                <span asp-validation-for="Departamento.FechaModificacion" class="text-danger"></span>
            </div>


            <div class="form-group text-center">
                <input type="submit" value="Guardar" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-page="./Index" class="btn btn-secondary">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
