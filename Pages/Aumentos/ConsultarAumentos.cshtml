@page
@model SistemaDeGestionSalarial.Pages.Aumentos.ConsultarAumentosModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles de Aumentos de Salario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+u6YxRrYYN9D1w2Id3A4HxGAKkQ/" crossorigin="anonymous">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Sistema de Gestión Salarial</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Asociados">Lista de Asociados</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Departamentos">Lista de Departamentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Aumentos/CalcularAumento">Calcular Aumento</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/Aumentos/ConsultarAumentos">Consultar Aumentos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container my-5">
        <h1 class="text-center my-4">Detalles de Aumentos de Salario</h1>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Departamento</th>
                        <th>Porcentaje</th>
                        <th>Fecha de Aumento</th>
                        <th>Descripción</th>
                        <th>Usuario responsable del aumento</th>
                        <th>ID Asociado</th>
                        <th>Nombre Asociado</th>
                        <th>Salario Actual</th>
                        <th>Salario Anterior</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detalle in Model.AumentosDetalles)
                    {
                        <tr>
                            <td>@detalle.NombreDepartamento</td>
                            <td>@detalle.Porcentaje %</td>
                            <td>@detalle.FechaAumento.ToShortDateString()</td>
                            <td>@detalle.Descripcion</td>
                            <td>@detalle.CreadoPor</td>
                            <td>@detalle.AsociadoID</td>
                            <td>@detalle.NombreAsociado</td>
                            <td>@detalle.SalarioActual.ToString("C", new System.Globalization.CultureInfo("es-MX"))</td>
                            <td>@detalle.SalarioAnterior?.ToString("C", new System.Globalization.CultureInfo("es-MX"))</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a asp-page="/Index" class="btn btn-secondary">Volver a Inicio</a>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p class="mb-0">Sistema de Gestión Salarial © 2024</p>
    </footer>

    <!-- Bootstrap Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+u6YxRrYYN9D1w2Id3A4HxGAKkQ/" crossorigin="anonymous"></script>
</body>
</html>
