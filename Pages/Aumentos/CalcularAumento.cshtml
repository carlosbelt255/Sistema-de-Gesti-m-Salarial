@page
@model SistemaDeGestionSalarial.Pages.Aumentos.CalcularAumentoModel

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aumento de Salario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+u6YxRrYYN9D1w2Id3A4HxGAKkQ/" crossorigin="anonymous">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Sistema de Gestión Salarial</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Asociados">Lista de Asociados</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Departamentos">Lista de Departamentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Aumentos/CalcularAumento">Calcular Aumento</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Aumentos/ConsultarAumentos">Consultar Aumentos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container my-5">
        <h1 class="text-center my-4">Aumento de Salario</h1>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Campo para el porcentaje -->
                    <div class="form-group mb-3">
                        <label asp-for="AumentoModel.Porcentaje" class="form-label">Porcentaje de Aumento</label>
                        <input asp-for="AumentoModel.Porcentaje" class="form-control" />
                        <span asp-validation-for="AumentoModel.Porcentaje" class="text-danger"></span>
                    </div>

                    <!-- Campo para seleccionar el departamento -->
                    <div class="form-group mb-3">
                        <label asp-for="AumentoModel.DepartamentoID" class="form-label">Departamento (opcional)</label>
                        <select asp-for="AumentoModel.DepartamentoID" class="form-select">
                            <option value="0">Global (Todos los departamentos)</option>
                            @foreach (var departamento in Model.AumentoModel.Departamentos)
                            {
                                <option value="@departamento.DepartamentoID">@departamento.Nombre</option>
                            }
                        </select>
                        <span asp-validation-for="AumentoModel.DepartamentoID" class="text-danger"></span>
                    </div>

                    <!-- Campo para el usuario -->
                    <div class="form-group mb-3">
                        <label asp-for="AumentoModel.Usuario" class="form-label">Usuario quien realiza el aumento:</label>
                        <input asp-for="AumentoModel.Usuario" class="form-control" />
                        <span asp-validation-for="AumentoModel.Usuario" class="text-danger"></span>
                    </div>

                    <!-- Botón para ejecutar el aumento -->
                    <div class="form-group text-center">
                        <input type="submit" value="Calcular Aumento" class="btn btn-primary btn-lg" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p class="mb-0">Sistema de Gestión Salarial © 2024</p>
    </footer>

    <!-- Bootstrap Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+u6YxRrYYN9D1w2Id3A4HxGAKkQ/" crossorigin="anonymous"></script>
</body>
</html>
