@page
@model SistemaDeGestionSalarial.Pages.Asociados.IndexModel

@{
    ViewData["Title"] = "Lista de Asociados";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+u6YxRrYYN9D1w2Id3A4HxGAKkQ/" crossorigin="anonymous">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Sistema de Gestión Salarial</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Asociados">Lista de Asociados</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Departamentos">Lista de Departamentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Aumentos/CalcularAumento">Calcular Aumento</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Aumentos/ConsultarAumentos">Consultar Aumentos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container my-5">
        <h1 class="text-center my-4">Lista de Asociados</h1>

        <p class="text-end">
            <a asp-page="Create" class="btn btn-success btn-lg">Registrar nuevo asociado</a>
        </p>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Asociado[0].Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Asociado[0].Salario)</th>
                        <th class="text-center">Fecha de ingreso</th>
                        <th class="text-center">Estatus</th>
                        <th>@Html.DisplayNameFor(model => model.Asociado[0].Departamento)</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Asociado)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@item.Salario.ToString("C", new System.Globalization.CultureInfo("es-MX"))</td>
                            <td>@Html.DisplayFor(modelItem => item.FechaIngreso)</td>
                            <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                            <td>@Html.DisplayFor(modelItem => item.Departamento.Nombre)</td>
                            <td class="text-center">
                                <a asp-page="./Edit" asp-route-id="@item.AsociadoID" class="btn btn-sm btn-primary me-2">Editar</a>
                                <a asp-page="./Details" asp-route-id="@item.AsociadoID" class="btn btn-sm btn-info me-2">Detalles</a>
                                <a asp-page="./Delete" asp-route-id="@item.AsociadoID" class="btn btn-sm btn-danger">Deshabilitar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p class="mb-0">Sistema de Gestión Salarial © 2024</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+u6YxRrYYN9D1w2Id3A4HxGAKkQ/" crossorigin="anonymous"></script>
</body>
</html>
